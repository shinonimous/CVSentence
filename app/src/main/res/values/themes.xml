<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.CVSentenceBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white_100</item>
        <item name="colorAccent">@color/blue_400</item>
        <item name="customColorValue">@color/blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_100</item>
        <item name="colorOnSecondary">@color/white_100</item>
        <!-- Others -->
        <item name="android:colorBackground">@color/white_100</item>
        <item name="colorOnBackground">@color/black_100</item>
        <item name="colorSurface">@color/blue_300</item>
        <item name="colorOnSurface">@color/black_100</item>
        <!--Components-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black_100</item>
    </style>

    <!-- Base application theme. -->
